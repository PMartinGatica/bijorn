---
import Logo from "../components/Logo.astro"

import { getI18N } from '../i18n';

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section class="relative z-10 mx-auto my-12 sm:my-24 max-w-[70ch] text-pretty px-6 text-left text-xl sm:px-20">
    <Logo class="m-auto mb-6 sm:mb-10 h-auto w-12 sm:w-16 text-white" />
    <h1 class="mx-auto mb-6 sm:mb-10 text-wrap text-center text-4xl sm:text-5xl font-semibold tracking-wide">
        {i18n.INTRO_TITLE}<br />{i18n.INTRO_TITLE_AFTER_BR}
    </h1>
    <p set:html={i18n.INTRO_DESCRIPTION_1} class="mb-4 sm:mb-6" />
    <p set:html={i18n.INTRO_DESCRIPTION_2} class="mb-4 sm:mb-6" />
    <p set:html={i18n.INTRO_DESCRIPTION_3} class="mb-4 sm:mb-6" />
</section>

